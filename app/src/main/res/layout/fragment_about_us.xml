<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:orientation="vertical"
    tools:context=".view.fragment.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFondo"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:text="@string/historia"
            android:textColor="@color/colorTexto"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/texto_historia"
            android:textColor="@color/colorTexto"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:text="@string/mision"
            android:textColor="@color/colorTexto"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/texto_mision"
            android:textColor="@color/colorTexto"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:text="@string/vision"
            android:textColor="@color/colorTexto"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/texto_vision"
            android:textColor="@color/colorTexto"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:text="@string/valores"
            android:textColor="@color/colorTexto"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondoCeldaProducto"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/texto_valores"
            android:textColor="@color/colorTexto"
            android:textSize="15sp" />

    </LinearLayout>
</FrameLayout>