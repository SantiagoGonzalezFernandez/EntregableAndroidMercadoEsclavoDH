<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFondoCeldaProducto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="2.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorFondoCeldaProducto">

            <androidx.cardview.widget.CardView
                android:id="@+id/CeldaProducto_CardView_ImagenDeProducto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="1.5dp">

                <ImageView
                    android:id="@+id/CeldaProducto_ImageView_ImagenDeProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/colorDestacado"/>

            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/CeldaProducto_TextView_TituloDeProducto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/CeldaProducto_CardView_ImagenDeProducto"
                    android:layout_alignTop="@id/CeldaProducto_CardView_ImagenDeProducto"
                    tools:text="Auto Usado Fiat"
                    android:textColor="@color/colorTexto"/>

                <TextView
                    android:id="@+id/CeldaProducto_TextView_PrecioDeProducto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/CeldaProducto_CardView_ImagenDeProducto"
                    android:layout_below="@id/CeldaProducto_TextView_TituloDeProducto"
                    android:textColor="@color/colorTexto"
                    tools:text="$35000"
                    android:textSize="20sp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

</FrameLayout>